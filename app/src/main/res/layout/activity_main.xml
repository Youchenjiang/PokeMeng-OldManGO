<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/任務"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/daily_task" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="11sp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_medicate" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/main_game" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="11sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/main_challenge" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="11sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imageButton6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:srcCompat="@drawable/main_location" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="11sp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        app:srcCompat="@drawable/main_prize" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="458sp"
        android:layout_height="264sp"
        android:layout_marginStart="-20sp"
        android:layout_marginTop="-80sp"
        android:layout_marginEnd="-20sp"
        android:layout_marginBottom="2sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/vivvi" />

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-10dp"
        android:fontFamily="@font/edukai5"
        android:format12Hour="yyyy/MM/dd EEEE H:mm"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="196dp"
        android:layout_height="253dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-40dp"
        android:background="@android:color/transparent"
        android:onClick="gotosetpersonal"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:srcCompat="@drawable/penn" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:fontFamily="@font/jfopenhuninn"
        android:text="編輯個人資料"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="103dp"
        android:layout_height="53dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/btnstyle"
        android:fontFamily="@font/jfopenhuninn"
        android:text="登出"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="103dp"
        android:layout_height="53dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/btnstyle"
        android:fontFamily="@font/jfopenhuninn"
        android:text="每日簽到"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>