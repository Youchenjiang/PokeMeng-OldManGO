<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/任務"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/daily_task" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="11sp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_medicate" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/main_game" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="11sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/imageButton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/main_challenge" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="16sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/imageButton6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:srcCompat="@drawable/main_location" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginStart="11sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="17sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        app:srcCompat="@drawable/main_prize" />

    <Button
        android:id="@+id/button"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:layout_marginStart="-14sp"
        android:layout_marginEnd="1sp"
        android:layout_marginBottom="-15sp"
        android:backgroundTint="#FF5050"
        android:fontFamily="@font/edukai5"
        android:text="任務"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button11"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:layout_marginStart="-18sp"
        android:layout_marginBottom="-14sp"
        android:backgroundTint="#FFAA39"
        android:fontFamily="@font/edukai5"
        android:text="用藥"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button12"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button12"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:layout_marginStart="-14sp"
        android:layout_marginBottom="-14sp"
        android:backgroundTint="#FFFF73"
        android:fontFamily="@font/edukai5"
        android:text="娛樂"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button13"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:layout_marginStart="-18sp"
        android:layout_marginBottom="-14sp"
        android:backgroundTint="#31FF8E"
        android:fontFamily="@font/edukai5"
        android:text="運動"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        app:layout_constraintStart_toEndOf="@+id/button12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button14"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:layout_marginStart="-20sp"
        android:layout_marginEnd="-14sp"
        android:layout_marginBottom="-14sp"
        android:backgroundTint="#26FFFF"
        android:fontFamily="@font/edukai5"
        android:text="定位"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="447sp"
        android:layout_height="56sp"
        android:layout_marginTop="1sp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="-5dp"
        android:backgroundTint="@color/design_default_color_background"
        android:fontFamily="@font/edukai5"
        android:text="主介面"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="458sp"
        android:layout_height="264sp"
        android:layout_marginStart="-20sp"
        android:layout_marginTop="-80sp"
        android:layout_marginEnd="-20sp"
        android:layout_marginBottom="2sp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/vivvi" />

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-10dp"
        android:fontFamily="@font/edukai5"
        android:format12Hour="yyyy/MM/dd EEEE H:mm"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>