<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Location.MapMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jfopenhuninn"
        android:text="定位系統"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jfopenhuninn"
        android:text="點選即可馬上回家"
        android:textSize="30sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/directionOneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/all_style_button"
        android:fontFamily="@font/jfopenhuninn"
        android:text="一鍵回家!!!"
        android:textSize="48sp"
        app:backgroundTint="@color/design_default_color_secondary" />

    <Button
        android:id="@+id/historybutton"
        android:layout_width="302dp"
        android:layout_height="89dp"
        android:background="@drawable/all_style_button"
        android:fontFamily="@font/jfopenhuninn"
        android:text="歷史位置紀錄"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <ListView
        android:id="@+id/locationHistoryListView"
        android:layout_width="350dp"
        android:layout_height="307dp" />


</LinearLayout>