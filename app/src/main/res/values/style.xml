<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">10sp</item> <!-- 設置字體大小，這裡以20sp為例 -->
    </style>

    <style name="CustomCalendarView" parent="android:Widget.CalendarView">
        <item name="android:background">#bca289</item> <!-- 背景颜色 -->
        <item name="android:textColor">#000000</item> <!-- 文字颜色 -->
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:shadowColor">#BEBEBE</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#BEBEBE</item>
    </style>
</resources>